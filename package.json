        "concurrently": "^9.2.1",
        "laravel-echo": "^2.2.4",
        "laravel-vite-plugin": "^2.0.0",
        "postcss": "^8.5.6",
        "postcss-nesting": "^13.0.2",
        "pusher-js": "^8.4.0",
        "tailwindcss": "^3.4.17",
        "vite": "^7.1.3"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "dotenv": "^17.2.1",
