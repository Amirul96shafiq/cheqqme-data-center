###############################################
# Application
###############################################
APP_NAME="CheQQme Data Center"
APP_ENV=local               # local | staging | production
APP_KEY=                    # Leave empty here; after copying to .env run: php artisan key:generate
APP_DEBUG=true              # false in production
APP_URL=http://127.0.0.1:8000
APP_TIMEZONE=UTC            # Change if you want a default timezone

###############################################
# Logging
###############################################
LOG_CHANNEL=stack           # See config/logging.php
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug             # info / warning / error in production

###############################################
# Database (SQLite default for quick start)
###############################################
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite  # Relative path to sqlite file
DB_DATABASE_PATH=database

# MySQL example (uncomment & adjust if you switch):
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=cheqqme
# DB_USERNAME=root
# DB_PASSWORD=secret

###############################################
# Cache / Session / Queue / Broadcast
###############################################
BROADCAST_DRIVER=log        # log | pusher | redis | etc
CACHE_DRIVER=file           # file | redis | database
SESSION_DRIVER=file         # file | redis | database
SESSION_LIFETIME=120        # Minutes
QUEUE_CONNECTION=sync       # sync | database | redis (use database/redis in production)
FAILURE_DRIVER=database     # Where failed jobs are stored (needs failed_jobs table)

###############################################
# Filesystems
###############################################
FILESYSTEM_DRIVER=public    # public | s3
# For S3 (future use):
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=ap-southeast-1
# AWS_BUCKET=

###############################################
# Mail
###############################################
MAIL_MAILER=smtp            # smtp | log | ses | mailgun | postmark
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username   # Replace in real .env only
MAIL_PASSWORD=your_mailtrap_password   # Replace in real .env only
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.test
MAIL_FROM_NAME="${APP_NAME}"

###############################################
# Localization
###############################################
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

###############################################
# Frontend (Vite / JS)
###############################################
VITE_APP_NAME="${APP_NAME}"

###############################################
# Feature / Package toggles (add as needed)
###############################################
# ACTIVITY_LOGGER_CONNECTION=database
# FEATURE_X_ENABLED=true

###############################################
# Security / CORS (add if you introduce Sanctum / APIs)
###############################################
# SESSION_DOMAIN=
# SANCTUM_STATEFUL_DOMAINS=localhost:5173
# APP_TRUSTED_PROXIES=*

###############################################
# MCP Integration
###############################################
MCP_ENDPOINT=http://127.0.0.1:5000/api         # MCP server API endpoint
MCP_API_KEY=                                   # Fill with your MCP API key

###############################################
# Misc (add future services: REDIS, SCOUT, etc.)
###############################################
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# SCOUT_DRIVER=database
