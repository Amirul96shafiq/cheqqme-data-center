###############################################
# Application
###############################################
APP_NAME="CheQQme Data Center"
APP_ENV=local               # local | staging | production
APP_KEY=                    # Leave empty here; after copying to .env run: php artisan key:generate
APP_DEBUG=true              # false in production
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC            # Change if you want a default timezone

###############################################
# Logging
###############################################
LOG_CHANNEL=stack           # See config/logging.php
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug             # info / warning / error in production

###############################################
# Database (SQLite default for quick start)
###############################################
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite  # Relative path to sqlite file
DB_DATABASE_PATH=database

# MySQL example (uncomment & adjust if switching to MySQL):
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=cheqqme
# DB_USERNAME=root
# DB_PASSWORD=secret

###############################################
# Cache / Session / Queue / Broadcast
###############################################
BROADCAST_DRIVER=reverb     # reverb | pusher | redis | log | null
CACHE_DRIVER=file           # file | redis | database
SESSION_DRIVER=file         # file | redis | database
SESSION_LIFETIME=120        # Minutes
QUEUE_CONNECTION=sync       # sync | database | redis (use database/redis in production)
FAILURE_DRIVER=database     # Where failed jobs are stored (needs failed_jobs table)

###############################################
# WebSocket / Pusher Configuration
# https://dashboard.pusher.com/accounts/sign_in
###############################################
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=ap1
# PUSHER_APP_ENCRYPTED=true

# VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
# VITE_PUSHER_HOST="${PUSHER_HOST}"
# VITE_PUSHER_PORT="${PUSHER_PORT}"
# VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
# VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
# VITE_REVERB_HOST="${REVERB_HOST}"
# VITE_REVERB_PORT="${REVERB_PORT}"
# VITE_REVERB_SCHEME="${REVERB_SCHEME}"

###############################################
# Laravel Reverb Configuration
###############################################
REVERB_APP_ID=cheqqme-app
REVERB_APP_KEY=cheqqme-key
REVERB_APP_SECRET=cheqqme-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http
REVERB_SCALING_ENABLED=false

###############################################
# Filesystems
###############################################
FILESYSTEM_DRIVER=public    # public | s3
# For S3 (future use):
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=ap-southeast-1
# AWS_BUCKET=

###############################################
# Mail
###############################################
MAIL_MAILER=smtp            # smtp | log | ses | mailgun | postmark
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_mailtrap_username   # Replace in real .env only
MAIL_PASSWORD=your_mailtrap_password   # Replace in real .env only
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@cheqqme.local
MAIL_FROM_NAME="${APP_NAME}"

###############################################
# Localization
###############################################
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

###############################################
# Frontend (Vite / JS)
###############################################
VITE_APP_NAME="${APP_NAME}"

###############################################
# Feature / Package toggles (add as needed)
###############################################
# ACTIVITY_LOGGER_CONNECTION=database
# FEATURE_X_ENABLED=true

###############################################
# Security / CORS (add if you introduce Sanctum / APIs)
###############################################
# SESSION_DOMAIN=
# SANCTUM_STATEFUL_DOMAINS=localhost:5173
# APP_TRUSTED_PROXIES=*

###############################################
# MCP Integration
###############################################
MCP_ENDPOINT=http://127.0.0.1:5000/api         # MCP server API endpoint
MCP_API_KEY=your_mcp_api_key_here

###############################################
# Playwright MCP Integration
###############################################
PLAYWRIGHT_MCP_ENABLED=false                    # Enable Playwright MCP integration
PLAYWRIGHT_MCP_BASE_URL=http://localhost:3000   # Playwright MCP server URL
PLAYWRIGHT_MCP_TIMEOUT=30                       # Request timeout in seconds
PLAYWRIGHT_BROWSER_TYPE=your_browser_type       # Browser type (chromium, firefox, webkit)
PLAYWRIGHT_BROWSER_HEADLESS=true                # Run browser in headless mode
PLAYWRIGHT_VIEWPORT_WIDTH=1280                  # Browser viewport width
PLAYWRIGHT_VIEWPORT_HEIGHT=720                  # Browser viewport height
PLAYWRIGHT_SAVE_SCREENSHOTS=true                # Save screenshots for debugging
PLAYWRIGHT_SAVE_TRACES=true                     # Save Playwright traces
PLAYWRIGHT_SAVE_VIDEOS=false                    # Save videos (resource intensive)
PLAYWRIGHT_BOOST_INTEGRATION=true               # Enable Laravel Boost integration
PLAYWRIGHT_LOG_BROWSER_ERRORS=true              # Log browser errors to Laravel logs
PLAYWRIGHT_SYNC_WITH_BOOST_LOGS=true            # Sync with Laravel Boost browser logs
PLAYWRIGHT_ALLOWED_DOMAINS=localhost,127.0.0.1  # Allowed domains for automation
PLAYWRIGHT_BLOCK_EXTERNAL=true                  # Block external requests for security
PLAYWRIGHT_IGNORE_HTTPS_ERRORS=false            # Ignore HTTPS certificate errors

###############################################
# Misc (add future services: REDIS, SCOUT, etc.)
###############################################
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# SCOUT_DRIVER=database

###############################################
# OpenAI Configuration for Chatbot
# https://platform.openai.com/
# Generate API key from OpenAI
###############################################
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7
OPENAI_ORGANIZATION=

###############################################
# Weather API Configuration
# https://home.openweathermap.org/api_keys
###############################################
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key
WEATHER_CACHE_TTL_HOURS=3
WEATHER_DEFAULT_LATITUDE=3.1390
WEATHER_DEFAULT_LONGITUDE=101.6869
WEATHER_DEFAULT_CITY="Kuala Lumpur"

###############################################
# Google OAuth Configuration
###############################################
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/popup-callback

###############################################
# Microsoft OAuth Configuration
###############################################
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/microsoft/callback

###############################################
# Spotify OAuth Configuration
###############################################
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
# Spotify redirect URI - use 127.0.0.1 for OAuth (required by Spotify for localhost)
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8000/auth/spotify/callback

###############################################
# Laravel Reverb Configuration
# Use php artisan install:broadcasting
# Select Reverb
###############################################
REVERB_APP_ID=your_reverb_app_id
REVERB_APP_KEY=your_reverb_app_key
REVERB_APP_SECRET=your_reverb_app_secret
REVERB_HOST="localhost"
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

BROADCAST_CONNECTION=reverb